{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "pnpm run build",
        "outputDirectory": "client/dist/public"
      }
    },
    {
      "src": "dist-server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist-server/index.js"
    }
  ]
}